mixin vip({img, name, title, extra, supreme})
  div
    if img
      +img(img)
    else
      +svg('avatar')
    h4= name
    h5= title
    h6= extra

mixin advisor({img, name, title})
  div
    if img
      +img(img)
    else
      +svg('avatar')
    h4= name
    p= title

mixin core({img, name, title})
  div
    if img
      +img(img)
    else
      +svg('avatar')
    h4= name
    p= title

mixin commie({img, name, title})
  div
    if img
      +img(img)
    else
      +svg('avatar-round')
    h4= name
    p= title

